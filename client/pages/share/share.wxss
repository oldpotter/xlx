/* pages/share/share.wxss */

.page-bg_img {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: -1;
}

.page-bg {
	z-index: 2;
  position: absolute;
  height: 100%;
  width: 100%;
  background: #e9e4f5;
}

.card-bg {
  border-radius: 20rpx;
  margin: 166rpx 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background: white;
}

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.avatar {
  width: 66rpx;
  height: 66rpx;
  border-radius: 33rpx;
  margin: 30rpx 30rpx;
}

.nickname {
  font-size: 30rpx;
}

.title {
  color: #929;
  font-size: 28rpx;
}

.duration {
  /* margin-top: 30rpx; */
  color: #929;
  font-size: 90rpx;
}

.content {
  font-size: 30rpx;
  color: #787878;
  /* background: saddlebrown; */
  padding: 0 20rpx;
}

.date {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #929292;
}

.button {
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  font-size: 34rpx;
  color: #fff;
  width: 266rpx;
  height: 88rpx;
  background: #929;
  /* text-align: center; */
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

