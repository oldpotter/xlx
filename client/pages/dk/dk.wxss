/* pages/dk/dk.wxss */
@import './dkitem.wxss';

.top-bg {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: #e9e4f5;
}

.clock {
  margin-top: 100rpx;
  font-size: 128rpx;
  color: #262226;
}

.btn {
  margin-top: 48rpx;
  margin-bottom: 80rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ab48ab;
  box-shadow: 0px 7px 67px 0px rgba(94, 68, 97, 0.22);
}

.btn-text {
  font-size: 36rpx;
  color: #fff;
}

.list_title-bg {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.list-title {
  font-size: 34rpx;
  margin: 30rpx;
}

.navi {
  font-size: 28rpx;
  margin: 30rpx;
	color:#ab48ab;
}

.recent-list {
	padding: 0 30rpx;
}

.punch-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.punch-mask_show {
  display: block;
}

.punch-mask-btn {
  margin: 30rpx;
}

.punch-text {
  border: 1rpx solid black;
  width: 90%;
}

.punch-info {
  font-size: 55rpx;
}

.punch-back {
  background: lightgrey;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
