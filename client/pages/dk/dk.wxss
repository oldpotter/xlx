/* pages/dk/dk.wxss */

.box {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.btns-box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: baseline;
}

.clock {
  margin-top: 20%;
  font-size: 100rpx;
}

.btn {
  margin-top: 20%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100px;
  border: 1rpx solid lightgray;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.navi {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.recent-list {
  margin-top: 10%;
  width: 90%;
  text-align: center;
}

.recent-item {
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  border-left: 1rpx solid lightgray;
  border-right: 1rpx solid lightgray;
  border-top: 1rpx solid lightgray;
}

.border-bottom {
  border-bottom: 1rpx solid lightgray;
}

.col {
  flex: 1;
  text-align: start;
  /* background: salmon; */
}

.col-last {
  flex: 3;
  /* background: saddlebrown; */
}

.record {
  /* background: darkseagreen; */
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  max-width: 50%;
  text-align: left;
}

.punch-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.punch-mask_show {
  display: block;
}

.punch-mask-btn {
  margin: 30rpx;
}

.punch-text {
  border: 1rpx solid black;
  width: 90%;
}

.punch-info {
  font-size: 55rpx;
}

.punch-back {
  background: lightgrey;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
