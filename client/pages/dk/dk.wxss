/* pages/dk/dk.wxss */
.top-bg {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: #e9e4f5;
}

.top-bg_recording {
  background: #f5e4e8;
}

.clock {
  margin-top: 100rpx;
  font-size: 128rpx;
  color: #262226;
}

.btn {
  margin-top: 48rpx;
  margin-bottom: 80rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ab48ab;
  box-shadow: 0px 7px 67px 0px rgba(94, 68, 97, 0.22);
}

.btn_recording {
  background: #e84c4c;
}

.btn-text {
  font-size: 36rpx;
  color: #fff;
}

.list_title-bg {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.list-title {
  font-size: 34rpx;
  margin: 30rpx;
}

.navi {
  font-size: 28rpx;
  margin: 30rpx;
  color: #ab48ab;
}

.recent-list {
  padding: 0 30rpx;
}

.prompt-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: #e9e4f5;
  display: none;
}

.prompt-bg_show {
  display: block;
}

.prompt_close {
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 30rpx 30rpx;
}

.prompt_title {
  margin-top: 80rpx;
  margin-left: 30rpx;
  font-size: 34rpx;
}

.prompt_duration {
  font-size: 60rpx;
  margin-left: 30rpx;
}

.prompt-text {
  background: white;
  /* margin: 80rpx 30rpx; */
  width: 100%;
	margin-top: 60rpx;
	position: relative;
}

.prompt-btn {
  background: #ab48ab;
  color: white;
  margin: 60rpx;
}

.prompt-date{
	float: right;
	font-size: 26rpx;
	margin-right: 30rpx;
	color: #262226;
	opacity: 0.5;
	margin-top: -50rpx;
}
