<!--pages/dk/dk.wxml-->
<view class='page'>
  <view class='page__bd box'>
    <view class='clock'>{{duration.hours}}:{{duration.minutes}}:{{duration.seconds}}</view>
    <view class='btn' bindtap='onClickBtn'>
      <text style='color:{{running?"red":"black"}}'>{{running?'结束打卡':'点击打卡'}}</text>
    </view>
    <view class='recent-list'>
      <view class='navi'>
        <navigator url="list" class="weui-agree__link">更多打卡记录</navigator>
      </view>
      <view wx:for='{{list}}' wx:key='id'>
        <view class='recent-item'>
          <text class='item-info'>{{item.displayctime}}</text>
          <text class='item-info'>{{item.displayduration.hours}}小时{{item.displayduration.minutes}}分{{item.displayduration.seconds}}秒</text>
          <text class='item-info record'>{{item.record}}</text>
        </view>
      </view>

    </view>
  </view>
</view>

<view class='punch-mask {{showDialog?"punch-mask_show":""}}'>
  <view class='punch-back'>
    <text class='punch-info'>时长：{{dkItem.duration.hours}}小时{{dkItem.duration.minutes}}分{{dkItem.duration.seconds}}秒</text>
    <textarea class='punch-text' bindinput='onInput' placeholder='说点感受' />
    <view class='btns-box'>
      <button class='weui-btn punch-mask-btn' size='mini' type='default' bindtap='onCancel'>取消</button>
      <button class='weui-btn punch-mask-btn' size='mini' type='primary' bindtap='onConfirm'>确定</button>
    </view>

  </view>
</view>