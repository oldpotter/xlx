/* views/avatar.wxss */
.user-info {
	position: absolute;
	top: 20%;
	left: 50%;
	transform: translate(-50%,-20%);
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.avatar {
  border-radius: 50%;
  border: 1rpx solid lightgray;
  box-shadow: 10rpx 10rpx lightgray;
  width: 200rpx;
  height: 200rpx;
}

.name {
	margin-top: 20rpx;
	text-align: center;
	color: darkgray;
}

.btn{
	position: absolute;
	bottom: 20%;
}